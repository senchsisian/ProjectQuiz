<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/coral_color_gradient"
    tools:context=".gamepackage.AllRatingsPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3">

            <TextView
                android:id="@+id/goto_menu_page"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:textColor="@color/sign_in_stroke"
                android:textSize="35sp"
                android:textStyle="bold"
                android:background="@drawable/ic_back"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/PLayers_rating_tabel"
                android:textColor="@color/sign_in_stroke"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delete_all_scores"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_delete"
                android:gravity="center_vertical"
                android:textColor="@color/sign_in_stroke"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
             >

            <TextView
                android:id="@+id/facts_of_hstory_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/facts_of_history"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/facts_of_hstory_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kingdom_of_van_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/kingdom_of_van"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/kingdom_of_van_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/yervandunis_family_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/yervanduni_family"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/yervandunis_family_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/artashesyans_familiy_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/artashesyan_family"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/artashesyans_familiy_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/arshakunis_family_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/arshakuni_family"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/arshakunis_family_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bagratunis_family_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/bagratuni_family"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/bagratunis_family_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_rating_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingHorizontal="5dp"
                android:text="@string/total_rating"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton


                android:paddingHorizontal="5dp"

                android:id="@+id/close_rating_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_sign_in"
                android:paddingStart="5dp"
                android:text="@string/close"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>
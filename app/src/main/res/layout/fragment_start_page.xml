<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamepackage.StartPageFragment"
    android:background="@drawable/coral_color_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|center_horizontal"
        >

        <ImageView
            android:id="@+id/start_apricot"
            android:layout_width="225dp"
            android:layout_height="282dp"
            android:layout_margin="25dp"
            app:srcCompat="@drawable/main_apricot" />

        <TextView
            android:id="@+id/some_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/check_"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton
                android:id="@+id/kingdom_of_van"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Վանի Թագավորություն"
                android:layout_margin="10dp"
                android:background="@drawable/btn_sign_in"
                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/artashesyan_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Արտաշեսյանների ընտանիք"
                android:enabled="true"
                android:layout_margin="10dp"
                android:background="@drawable/btn_sign_in"
                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/arshakuni_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Արշակունիների ընտանիք"
                android:enabled="false"
                android:layout_margin="10dp"
                android:background="@drawable/btn_sign_in"
                android:paddingStart="5dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:layout_margin="10dp"
            android:background="@drawable/btn_sign_in"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>
</FrameLayout>
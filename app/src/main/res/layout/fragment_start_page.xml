<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_vertical"
    android:background="@drawable/coral_color_gradient"
    tools:context=".gamepackage.StartPageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/ic_back"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_0"
                android:textColor="@color/sign_in_stroke"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

            <ProgressBar
                android:id="@+id/progress_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/sign_in_stroke"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/next_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_0"
                android:gravity="center"
                android:textColor="@color/sign_in_stroke"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/progress_level_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/_0_100"
            android:textColor="@color/sign_in_stroke"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/some_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/check_"
                android:textColor="@color/sign_in_stroke"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/facts_of_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:checked="true"
                    android:enabled="false"
                    android:text="@string/facts_of_history"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/kingdom_of_van"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:enabled="false"
                    android:text="@string/kingdom_of_van"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/yervanduni_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:enabled="false"
                    android:text="@string/yervanduni_family"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/artashesyan_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:enabled="false"
                    android:text="@string/artashesyan_family"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/arshakuni_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:enabled="false"
                    android:text="@string/arshakuni_family"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/bagratuni_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_sign_in"
                    android:enabled="false"
                    android:text="@string/bagratuni_family"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </RadioGroup>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/btn_sign_in"
            android:padding="10dp"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </LinearLayout>
</FrameLayout>
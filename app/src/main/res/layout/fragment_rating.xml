<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamepackage.RatingFragment"
    android:background="@drawable/coral_color_gradient">

    <TextView
        android:id="@+id/close_fragment"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_close"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rating_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sad_smile"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/winning_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/sign_in_stroke"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/winning_text"/>

            <TextView
                android:id="@+id/finish_scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/sign_in_stroke"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/_0"
                android:paddingHorizontal="5dp"/>

            <TextView
                android:id="@+id/pointers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/sign_in_stroke"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/score_text" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/return_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_menu"
            android:background="@drawable/btn_sign_in"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>